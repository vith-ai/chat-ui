{
  "name": "@vith-ai/chat-ui",
  "version": "0.2.0",
  "description": "Model-agnostic React components for building agentic chat interfaces",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./adapters/claude": {
      "import": "./dist/adapters/claude.js",
      "require": "./dist/adapters/claude.cjs",
      "types": "./dist/adapters/claude.d.ts"
    },
    "./adapters/openai": {
      "import": "./dist/adapters/openai.js",
      "require": "./dist/adapters/openai.cjs",
      "types": "./dist/adapters/openai.d.ts"
    },
    "./adapters/bedrock": {
      "import": "./dist/adapters/bedrock.js",
      "require": "./dist/adapters/bedrock.cjs",
      "types": "./dist/adapters/bedrock.d.ts"
    },
    "./adapters/openrouter": {
      "import": "./dist/adapters/openrouter.js",
      "require": "./dist/adapters/openrouter.cjs",
      "types": "./dist/adapters/openrouter.d.ts"
    },
    "./adapters/ollama": {
      "import": "./dist/adapters/ollama.js",
      "require": "./dist/adapters/ollama.cjs",
      "types": "./dist/adapters/ollama.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsup && npm run build:css",
    "build:css": "postcss src/styles.css -o dist/styles.css --verbose",
    "build:docs": "cd docs && npm run build",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "diff": "^5.2.0",
    "dompurify": "^3.0.8",
    "lucide-react": "^0.312.0"
  },
  "devDependencies": {
    "@types/diff": "^5.0.9",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^25.2.1",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "keywords": [
    "react",
    "chat",
    "ai",
    "llm",
    "claude",
    "openai",
    "bedrock",
    "agentic",
    "ui",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vith-ai/chat-ui.git"
  },
  "license": "MIT",
  "author": "Vith AI"
}
